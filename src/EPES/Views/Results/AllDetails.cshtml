@model EPES.ViewModels.DataForEvaluationViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">ผลการปฏิบัติราชการ</h1>
    <p class="mb-4">บันทึกผล</p>
    <form asp-action="AllDetails">
        <div class="form-group row">
            <label class="col-form-label col-md-8 text-md-right">หน่วยงาน: </label>
            <div class="col-md-4">
                <select name="ownerofficeid" asp-items="ViewBag.OfficeId" class="form-control" onchange="this.form.submit()">
                    <option value="">เลือกหน่วยงาน</option>
                </select>
            </div>
        </div>
        <input asp-for="yearPoint" class="form-control" hidden />
        <input asp-for="poeid" value="@Model.Point.Id" class="form-control" hidden />
    </form>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Point.Name</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered" id="DataForEvalutionTable" style="width:100%;" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            เดือน
                        </th>
                        <th>
                            ผลการปฏิบัติราชการ
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @(new DateTime(1, 10, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result10)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 11, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result11)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 12, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result12)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 1, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result1)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 2, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result2)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 3, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result3)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 4, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result4)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 5, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result5)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 6, 1).ToString("MMMM"))
                        </td>
