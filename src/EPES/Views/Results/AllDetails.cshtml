                            @Html.DisplayFor(model => model.result6)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 7, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result7)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 8, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result8)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @(new DateTime(1, 9, 1).ToString("MMMM"))
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.result9)
                        </td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a asp-action="Index" class="btn btn-info" asp-route-yearPoint="@Model.yearPoint">กลับหน้า บันทึกผลการปฏิบัติราชการ</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            if ($("select[name = 'ownerofficeid']").val() == "") {
                $("div.card-body").hide();
            }
        });
    </script>
}
