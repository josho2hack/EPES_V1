                    </tbody>
                </table>
                <p class="text-right">
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a asp-action="Create" asp-route-plan="1" asp-route-yearPoint="@Model.yearPoint">เพิ่มแผน</a>
                    }
                </p>
            </div>
        </div>
    </div>

