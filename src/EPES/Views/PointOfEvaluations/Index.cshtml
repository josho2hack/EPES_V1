@model IEnumerable<EPES.Models.PointOfEvaluation>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">แผนปฏิบัติราชการ</h1>
    <p class="mb-4">ตัวชี้วัดผลการปฏิบัติราชการ</p>
    <p>
        <a asp-action="Create">เพิ่มแผน</a>
    </p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">แผน A</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" style="width:100%;" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Year)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Point)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SubPoint)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Plan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unit)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Weight)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate3)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate4)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate5)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Year.ToString("yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Point)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SubPoint)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Plan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Unit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate3)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate4)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate5)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>|
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-search-plus"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
