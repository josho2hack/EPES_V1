@using Microsoft.AspNetCore.Identity
@model EPES.Models.PointOfEvaluation

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    var user = await UserManager.GetUserAsync(User);
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">แผนปฏิบัติราชการ</h1>
    <p class="mb-4">ตัวชี้วัดผลการปฏิบัติราชการ</p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">เพิ่มแผน @ViewBag.Plan</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Point" class="control-label"></label>
                            <input asp-for="Point" class="form-control" />
                            <span asp-validation-for="Point" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Unit" class="control-label"></label>
                            <input asp-for="Unit" class="form-control" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Weight" class="control-label"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rate1" class="control-label"></label>
                            <input asp-for="Rate1" class="form-control" />
                            <span asp-validation-for="Rate1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rate2" class="control-label"></label>
                            <input asp-for="Rate2" class="form-control" />
                            <span asp-validation-for="Rate2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rate3" class="control-label"></label>
                            <input asp-for="Rate3" class="form-control" />
                            <span asp-validation-for="Rate3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rate4" class="control-label"></label>
                            <input asp-for="Rate4" class="form-control" />
                            <span asp-validation-for="Rate4" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rate5" class="control-label"></label>
                            <input asp-for="Rate5" class="form-control" />
                            <span asp-validation-for="Rate5" class="text-danger"></span>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="form-group">
                                <label asp-for="OwnerOfficeId" class="control-label"></label>
                                <select asp-for="OwnerOfficeId" class="form-control" asp-items="ViewBag.OfficeID">
                                    <option value="">ตัวชี้วัด สภ./สท.</option>
                                </select>
                                <span asp-validation-for="OwnerOfficeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AuditOfficeId" class="control-label"></label>
                                <select asp-for="AuditOfficeId" class="form-control" asp-items="ViewBag.AuditOfficeID">
                                </select>
                                <span asp-validation-for="AuditOfficeId" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <input name="ownerOfficeCode" value="@user.OfficeId" hidden />
                            <input name="auditOfficeCode" value="@user.OfficeId" hidden />
                        }
                        <div class="form-group">
                            <input type="submit" value="เพิ่ม" class="btn btn-primary" />
                        </div>
                        <input type="hidden" name="y" value="@ViewBag.yearPoint" />
                        <input asp-for="Plan" placeholder="@ViewBag.PlanValue" hidden />
                    </form>
                </div>
            </div>

            <div>
                <a asp-area="" asp-controller="PointOfEvaluations" asp-action="Index">ยกเลิก</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
