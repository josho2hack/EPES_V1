@using Microsoft.AspNetCore.Identity
@model EPES.Models.PointOfEvaluation

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    var user = await UserManager.GetUserAsync(User);
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">แผนปฏิบัติราชการ</h1>
    <p class="mb-4">ตัวชี้วัดผลการปฏิบัติราชการ</p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">เพิ่มแผน @ViewBag.Plan</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="DetailPlan" class="control-label"></label>
                            <input asp-for="DetailPlan" class="form-control" />
                            <span asp-validation-for="DetailPlan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Point" class="control-label"></label>
                            <input asp-for="Point" class="form-control" />
                            <span asp-validation-for="Point" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Weight" class="control-label"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Unit" class="control-label"></label>
                            <select asp-for="Unit" class="form-control" asp-items="Html.GetEnumSelectList<UnitOfPoint>()"></select>
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <label asp-for="Rate1" class="control-label"></label>
                                <input asp-for="Rate1" class="form-control" />
                                <span asp-validation-for="Rate1" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-7">
                                <label asp-for="DetailRate1" class="control-label labelDetailRate"></label>
                                <input asp-for="DetailRate1" class="form-control" />
                                <span asp-validation-for="DetailRate1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <label asp-for="Rate2" class="control-label"></label>
                                <input asp-for="Rate2" class="form-control" />
                                <span asp-validation-for="Rate2" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-7">
                                <label asp-for="DetailRate2" class="control-label labelDetailRate"></label>
                                <input asp-for="DetailRate2" class="form-control" />
                                <span asp-validation-for="DetailRate2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <label asp-for="Rate3" class="control-label"></label>
                                <input asp-for="Rate3" class="form-control" />
                                <span asp-validation-for="Rate3" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-7">
                                <label asp-for="DetailRate3" class="control-label labelDetailRate"></label>
                                <input asp-for="DetailRate3" class="form-control" />
                                <span asp-validation-for="DetailRate3" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <label asp-for="Rate4" class="control-label"></label>
                                <input asp-for="Rate4" class="form-control" />
                                <span asp-validation-for="Rate4" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-7">
                                <label asp-for="DetailRate4" class="control-label labelDetailRate"></label>
                                <input asp-for="DetailRate4" class="form-control" />
                                <span asp-validation-for="DetailRate4" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <label asp-for="Rate5" class="control-label"></label>
                                <input asp-for="Rate5" class="form-control" />
                                <span asp-validation-for="Rate5" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-7">
                                <label asp-for="DetailRate5" class="control-label labelDetailRate"></label>
                                <input asp-for="DetailRate5" class="form-control" />
                                <span asp-validation-for="DetailRate5" class="text-danger"></span>
                            </div>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="form-group">
                                <label asp-for="OwnerOfficeId" class="control-label"></label>
                                <select asp-for="OwnerOfficeId" class="form-control" asp-items="ViewBag.OfficeID">
                                    @if ((ViewBag.PlanValue == 1) || (ViewBag.PlanValue == 2))
                                    {
                                        <option value="">สภ./สท.</option>
                                    }
                                </select>
                                <span asp-validation-for="OwnerOfficeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AuditOfficeId" class="control-label"></label>
                                <select asp-for="AuditOfficeId" class="form-control" asp-items="ViewBag.AuditOfficeID"></select>
                                <span asp-validation-for="AuditOfficeId" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <input name="ownerOfficeCode" value="@user.OfficeId" hidden />
                            <input name="auditOfficeCode" value="@user.OfficeId" hidden />
                        }
                        <button type="submit" class="btn btn-primary">เพิ่ม</button>
                        <a asp-area="" asp-controller="PointOfEvaluations" asp-action="Index" asp-route-yearPoint="@ViewBag.yearPoint" class="btn btn-secondary">ยกเลิก</a>
                        <input type="hidden" name="y" value="@ViewBag.yearPoint" />
                        <input asp-for="Plan" placeholder="@ViewBag.PlanValue" hidden />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $(".labelDetailRate, #DetailRate1, #DetailRate2, #DetailRate3, #DetailRate4, #DetailRate5").hide();

            $("#Unit").change(function () {
                if ($(this).children("option:selected").val() == 1) {
                    $(".labelDetailRate,#DetailRate1, #DetailRate2, #DetailRate3, #DetailRate4, #DetailRate5").show();
                }
                else {
                    $(".labelDetailRate,#DetailRate1, #DetailRate2, #DetailRate3, #DetailRate4, #DetailRate5").hide();
                }
            });
        });
    </script>
}
