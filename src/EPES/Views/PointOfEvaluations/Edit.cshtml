@model EPES.Models.PointOfEvaluation

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">แผนปฏิบัติราชการ</h1>
    <p class="mb-4">ตัวชี้วัดผลการปฏิบัติราชการ</p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">แก้ไขแผน @ViewBag.Plan</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Year" class="control-label"></label>
                            <select asp-for="Year" class="form-control">
                                <option value="@(new DateTime(DateTime.Now.AddYears(-1).Year,1,1))">@DateTime.Now.AddYears(-1).ToString("yyyy")</option>
                                <option value="@(new DateTime(DateTime.Now.Year,1,1))">@DateTime.Now.ToString("yyyy")</option>
                                <option value="@(new DateTime(DateTime.Now.AddYears(1).Year,1,1))">@DateTime.Now.AddYears(1).ToString("yyyy")</option>
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            if ((ViewBag.Plan == "A") || (ViewBag.Plan == "C"))
                            {
                                <div class="form-group">
                                    <label asp-for="OwnerOfficeId" class="control-label"></label>
                                    <select asp-for="OwnerOfficeId" class="form-control" asp-items="ViewBag.OfficeId">
                                        @if (ViewBag.Plan == "C")
                                        {
                                            <option value="">สภ./สท.</option>
                                        }
                                    </select>
                                    <span asp-validation-for="OwnerOfficeId" class="text-danger"></span>
                                </div>
                            }
                            <div class="form-group">
                                <label asp-for="AuditOfficeId" class="control-label"></label>
                                <select asp-for="AuditOfficeId" class="form-control" asp-items="ViewBag.AuditOfficeId"></select>
                                <span asp-validation-for="AuditOfficeId" class="text-danger"></span>
                            </div>
                        }
                        <div class="form-group">
                            <label asp-for="Point" class="control-label"></label>
                            <input asp-for="Point" class="form-control" />
                            <span asp-validation-for="Point" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DetailPlan" class="control-label"></label>
                            <input asp-for="DetailPlan" class="form-control" />
                            <span asp-validation-for="DetailPlan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Plan" class="control-label"></label>
                            <select asp-for="Plan" class="control-label">
                                <option value="0">A</option>
                                <option value="1">B</option>
                                <option value="2">C</option>
                                <option value="3">D</option>
                            </select>
                            <span asp-validation-for="Plan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Weight" class="control-label"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <fieldset>
                            <legend>เกณฑ์การประเมิน</legend>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Unit" class="control-label"></label>
                                    <select asp-for="Unit" class="form-control" asp-items="Html.GetEnumSelectList<UnitOfPoint>()"></select>
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6" name="round">
                                    <label class="control-label">รอบการประเมิน</label>
                                    <select id="round-select" class="form-control">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row" name="mainrate1">
                                <div class="form-group col-md-6 percent">
                                    <label asp-for="Rate1" class="control-label"></label>
                                    <input asp-for="Rate1" class="form-control" />
                                    <span asp-validation-for="Rate1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row" name="mainrate2">
                                <div class="form-group col-md-6 percent">
                                    <label asp-for="Rate2" class="control-label"></label>
                                    <input asp-for="Rate2" class="form-control" />
                                    <span asp-validation-for="Rate2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row" name="mainrate3">
                                <div class="form-group col-md-6 percent percent">
                                    <label asp-for="Rate3" class="control-label"></label>
                                    <input asp-for="Rate3" class="form-control" />
                                    <span asp-validation-for="Rate3" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row" name="mainrate4">
                                <div class="form-group col-md-6 percent">
                                    <label asp-for="Rate4" class="control-label"></label>
                                    <input asp-for="Rate4" class="form-control" />
                                    <span asp-validation-for="Rate4" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row" name="mainrate5">
                                <div class="form-group col-md-6 percent">
                                    <label asp-for="Rate5" class="control-label"></label>
                                    <input asp-for="Rate5" class="form-control" />
                                    <span asp-validation-for="Rate5" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group">
                            <input type="hidden" name="yearPoint" value="@ViewBag.yearPoint" />
                            <input asp-for="Plan" class="form-control" hidden />

                            <input type="submit" value="บันทึกการแก้ไข" class="btn btn-primary" />
                            <a asp-area="" asp-controller="PointOfEvaluations" asp-action="Index" asp-route-yearPoint="@ViewBag.yearPoint" class="btn btn-secondary">ยกเลิก</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $("div[name='round']").hide();

            $("#Unit").change(function () {
                if ($(this).children("option:selected").val() == 1) {
                    $("#DataForEvalutionTable").hide();
                    $("div[name='round']").show();

                    $("#round-select").val('1');
                    $("div[name^='mainrate']").empty();

                    $("div[name='mainrate1']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 1 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>1.</div><div class='col-md-10'><input id='DetailRate1' name='DetailRate1' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate2']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 2 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>2.</div><div class='col-md-10'><input id='DetailRate2' name='DetailRate2' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate3']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 3 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>3.</div><div class='col-md-10'><input id='DetailRate3' name='DetailRate3' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate4']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 4 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>4.</div><div class='col-md-10'><input id='DetailRate4' name='DetailRate4' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate5']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 5 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>5.</div><div class='col-md-10'><input id='DetailRate5' name='DetailRate5' class='form-control' /></div></div></div>"
                    );
                }
                else {
                    $("#DataForEvalutionTable").show();
                    $("div[name='round']").hide();
                    $("div[name^='mainrate']").empty();

                    $("div[name='mainrate1']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>เกณฑ์การให้คะแนน 1 คะแนน</label><input id='Rate1' name='Rate1' class='form-control' /></div>"
                    );
                    $("div[name='mainrate2']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>เกณฑ์การให้คะแนน 2 คะแนน</label><input id='Rate2' name='Rate2' class='form-control' /></div>"
                    );
                    $("div[name='mainrate3']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>เกณฑ์การให้คะแนน 3 คะแนน</label><input id='Rate3' name='Rate3' class='form-control' /></div>"
                    );
                    $("div[name='mainrate4']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>เกณฑ์การให้คะแนน 4 คะแนน</label><input id='Rate4' name='Rate4' class='form-control' /></div>"
                    );
                    $("div[name='mainrate5']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>เกณฑ์การให้คะแนน 5 คะแนน</label><input id='Rate5' name='Rate5' class='form-control' /></div>"
                    );
                }
            });

            $("#round-select").change(function () {
                if ($(this).children("option:selected").val() == 2) {
                    $("div[name='mainrate1']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 1 คะแนน รอบที่ 2</label><div class='row'><div class='col-md-2 text-md-right'>1.</div><div class='col-md-10'><input id='Detail2Rate1' name='Detail2Rate1' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate2']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 2 คะแนน รอบที่ 2</label><div class='row'><div class='col-md-2 text-md-right'>2.</div><div class='col-md-10'><input id='Detail2Rate2' name='Detail2Rate2' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate3']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 3 คะแนน รอบที่ 2</label><div class='row'><div class='col-md-2 text-md-right'>3.</div><div class='col-md-10'><input id='Detail2Rate3' name='Detail2Rate3' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate4']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 4 คะแนน รอบที่ 2</label><div class='row'><div class='col-md-2 text-md-right'>4.</div><div class='col-md-10'><input id='Detail2Rate4' name='Detail2Rate4' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate5']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 5 คะแนน รอบที่ 2</label><div class='row'><div class='col-md-2 text-md-right'>5.</div><div class='col-md-10'><input id='Detail2Rate5' name='Detail2Rate5' class='form-control' /></div></div></div>"
                    );
                }
                else {
                    $("div[name^='mainrate']").empty();

                    $("div[name='mainrate1']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 1 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>1.</div><div class='col-md-10'><input id='DetailRate1' name='DetailRate1' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate2']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 2 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>2.</div><div class='col-md-10'><input id='DetailRate2' name='DetailRate2' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate3']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 3 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>3.</div><div class='col-md-10'><input id='DetailRate3' name='DetailRate3' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate4']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 4 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>4.</div><div class='col-md-10'><input id='DetailRate4' name='DetailRate4' class='form-control' /></div></div></div>"
                    );
                    $("div[name='mainrate5']").append(
                        "<div class='form-group col-md-6'><label class='control-label'>รายละเอียดเกณฑ์การให้คะแนน 5 คะแนน รอบที่ 1</label><div class='row'><div class='col-md-2 text-md-right'>5.</div><div class='col-md-10'><input id='DetailRate5' name='DetailRate5' class='form-control' /></div></div></div>"
                    );
                }
            });

            if ($("#OwnerOfficeId").val() == "") {
                $("#DataForEvalutionTable").hide();
            }

            $("#OwnerOfficeId").change(function () {
                if ($(this).children() == "") {
                    $("#DataForEvalutionTable").hide();
                } else {
                    $("#DataForEvalutionTable").show();
                }
            });
        });
    </script>
}
